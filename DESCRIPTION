Package: isotree
Type: Package
Title: Isolation-Based Outlier Detection
Version: 0.3.9
Authors@R: c(
  person(given="David", family="Cortes", role=c("aut", "cre", "cph"),
         email="david.cortes.rivera@gmail.com"),
  person(given="Thibaut", family="Goetghebuer-Planchon", role="cph",
